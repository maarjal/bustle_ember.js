{{#if updateArticleForm}}
<h4>Update {{article.author}}'s {{article.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=article.author}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=article.title}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=article.date}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{input value=body id="body" placeholder=article.body}}
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        {{input value=image id="image" placeholder=article.image}}
      </div>
      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-default btn-lg" {{action 'updateArticleForm'}}>Update</button>
{{/if}}
